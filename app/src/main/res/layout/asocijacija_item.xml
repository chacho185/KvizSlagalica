<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layoutDescription="@xml/asocijacija_item_scene">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/hiddenField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/hidden_field_background"
            android:textColor="@android:color/transparent"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/hiddenField2"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/hidden_field_background"
            android:textColor="@android:color/transparent"
            android:textSize="8sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/hiddenField3"
            android:layout_margin="2dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/hidden_field_background"
            android:textColor="@android:color/transparent"
            android:textSize="8sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/hiddenField4"
            android:layout_margin="2dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/hidden_field_background"
            android:textColor="@android:color/transparent"
            android:textSize="8sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/answerField"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hidden_field_background"
        android:textColor="@android:color/transparent"
        android:textSize="8sp"
        android:textStyle="bold" />


</LinearLayout>