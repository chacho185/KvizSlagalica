<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Prikazivanje profilne slike -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_photo" />

    <!-- Informacije o prijatelju -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- Korisničko ime -->
        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Korisničko ime"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Trenutni mjesečni rang -->
        <TextView
            android:id="@+id/textViewRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mjesečni rang"
            android:textColor="#808080"
            android:textSize="14sp" />

        <!-- Broj osvojenih zvijezda -->
        <TextView
            android:id="@+id/textViewStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj zvijezda"
            android:textColor="#808080"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Gumb za započinjanje partije koji je na gone za sad -->
    <Button
        android:id="@+id/buttonStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Započni partiju"
        android:visibility="gone" />

</LinearLayout>
